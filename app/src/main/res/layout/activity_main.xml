<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="snehal.com.scarnesdice.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textViewUserScore"
            android:layout_weight="0.02" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textViewCompScore"
            android:layout_weight="0.02" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textViewTurn"
            android:layout_weight="0.02" />

        <ImageView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/dice1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/textViewWinner"
            android:layout_weight="0.11" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_weight="0.07"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="Roll"
                android:id="@+id/buttonRoll"
                android:layout_weight="0.19" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="Hold"
                android:id="@+id/buttonHold"
                android:layout_weight="0.19" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:text="Reset"
                android:id="@+id/buttonReset"
                android:layout_weight="0.19" />
        </LinearLayout>

        <TextView
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewRolls"
            android:layout_weight="0.43" />

    </LinearLayout>
</RelativeLayout>
